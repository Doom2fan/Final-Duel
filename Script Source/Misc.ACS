int TriedToDropFistsOnce[MAXPLAYERS] = {0};
str FD_TryingToDropFistsMessages[7] = {
		"You're not Zharkov.",
		"Are you dumb?",
		"WHAT THE FUCK DO YOU WANT ME TO DO?!",
		"WAT.",
		"If you do that you will not be able to use anything, since your hands will not grow back.",
		"STAHP",
		"AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
		};
script "FD_TryingToDropFists" (void) {
	if (TriedToDropFistsOnce[PlayerNumber ()] == 0) {
		HudMessage (s:"You can't drop your fists!";
			HUDMSG_FADEINOUT, 198198119, CR_UNTRANSLATED, 0.5, 0.6, 3.0, 0.3, 0.3);
		TriedToDropFistsOnce[PlayerNumber ()] = 1;
	}
	
	else {
		int messageNumber = random (0, 6);
		HudMessage (s:FD_TryingToDropFistsMessages[messageNumber];
			HUDMSG_FADEINOUT, 198198119, CR_UNTRANSLATED, 0.5, 0.6, 3.0, 0.3, 0.3);
	}
}