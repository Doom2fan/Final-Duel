script "FD_CannotDropThisWeapon" (void) {
	HudMessage (s:"You cannot drop this weapon!";
				HUDMSG_FADEINOUT, 198198119, CR_UNTRANSLATED, 0.5, 0.6, 3.0, 0.3, 0.3);
