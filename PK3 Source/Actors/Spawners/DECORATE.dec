// Shotgun Replacer
ACTOR ShotgunReplacer
{
	States
	{
	Spawn:
		TNT1 AA 0 NoDelay A_SpawnItemEx("Shell2", 0, 0, 0, frandom(-1.0, 1.0), frandom(-1.0, 1.0), 1.0, random(0, 359), SXF_NOCHECKPOSITION)
		TNT1 A 0 A_SpawnItemEx("FDShotgun", 0, 0, 0, frandom(-1.0, 1.0), frandom(-1.0, 1.0), 1.0, random(0, 359), SXF_NOCHECKPOSITION)
		Stop
	}
}

