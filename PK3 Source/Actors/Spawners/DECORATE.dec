// Monster Replacers

// Wolfenstein SS Replacer
ACTOR WolfensteinSSReplacer Replaces WolfensteinSS
{
	States
	{
	Spawn:
		TNT1 A 0 NoDelay A_Jump(256, "MP40", "Mauser")
		Loop
	MP40:
		TNT1 A 0 A_SpawnItemEx("MP40Nazi")
		Stop
	Mauser:
		TNT1 A 0 A_SpawnItemEx("MauserNazi")
		Stop
	}
}