//=================================================================================================
//
// MaxHealth
//
//=================================================================================================

Actor MaxHealth : Health
{
	Inventory.MaxAmount 50
	Inventory.PickupSound "misc/health_pkup"
}

//=================================================================================================
//
// Max. health bonus
//
//=================================================================================================

Actor MaxHealthBonus : MaxHealth 5090
{
	Game Doom
	Game Heretic
	Game Hexen
	+CountItem
	+Inventory.AlwaysPickup
	Inventory.Amount 1
	Inventory.MaxAmount 10
	Health 200
	Inventory.PickupMessage "$PICKUP_MAXHEALTHBONUS"
	States
	{
	Spawn:
		BON3 ABCDCB 6
		Loop
	}
}
// Stimpack
Actor FDStimpack : HealthPickup Replaces Stimpack
{
	Health 10
	+FLOORCLIP
	+InvBar
	Inventory.MaxAmount 10
	Inventory.InterHubAmount 10
	Tag "Stimpack"
	Inventory.Icon "ARTISTIM"
	Inventory.PickupMessage "$GOTSTIM"
	States
	{
	Spawn:
		STIM A -1
		Stop
	}
}
// Medikit
Actor FDMedikit : HealthPickup Replaces Medikit
{
	Health 25
	+FLOORCLIP
	+InvBar
	Inventory.MaxAmount 5
	Inventory.InterHubAmount 5
	Tag "Medikit"
	Inventory.PickupMessage "$GOTMEDIKIT"
	Inventory.Icon "ARTIMEDI"
	HealthPickup.AutoUse 1
	States
	{
	Spawn:
		MEDI A -1
		Stop
	}
}