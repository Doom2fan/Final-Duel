// By WildWeasel
// Auto Reload(By WildWeasel)
ACTOR EnableAutoReload : Boolean { }

ACTOR AutoReloadingToggle : CustomInventory
{
	Inventory.Amount 1
	Inventory.MaxAmount 1
	-INVBAR
	States
	{
    Use:
		TNT1 A 0 A_JumpIfInventory("EnableAutoReload",1,"Disable")
		TNT1 A 0 A_GiveInventory("EnableAutoReload",1)
		TNT1 A 0 A_Print("Auto-Reload ON")
		Fail
	Disable:
		TNT1 A 0 A_TakeInventory("EnableAutoReload",1)
		TNT1 A 0 A_Print("Auto-Reload OFF")
		Fail
   }
}

