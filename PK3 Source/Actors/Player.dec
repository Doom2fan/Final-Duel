// Taunting
Actor Taunting : Boolean { }
ACTOR TauntKey : CustomInventory
{
	Inventory.Amount 1
	Inventory.MaxAmount 1
	-INVBAR
	States
	{
	Use:
        TNT1 A 0 A_GiveInventory("Taunting",1)
        Fail
	}
}

// Show keys(Original code by WildWeasel)
ACTOR ShowKeys : Boolean { }
ACTOR ShowKeysToggle : CustomInventory
{
	Inventory.Amount 1
	Inventory.MaxAmount 1
	-INVBAR
	States
	{
	Use:
	    TNT1 A 0 A_JumpIfInventory("ShowKeys",1,"Disable")
        TNT1 A 0 A_GiveInventory("ShowKeys",1)
		TNT1 A 0 ACS_NamedExecute("ShowKeys", 0, 0, 0, 0)
        Fail
	Disable:
		TNT1 A 0 A_TakeInventory("ShowKeys",1)
		TNT1 A 0 ACS_NamedExecute("ShowKeys", 0, 0, 0, 0)
		Fail
   }
}

