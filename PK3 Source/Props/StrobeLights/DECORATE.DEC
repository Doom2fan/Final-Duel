Actor StrobeLightBlue 30125
{
  //$Category Final Duel-Props
  //$Title Blue Strobe Light
  Radius 16
  Height 16
  +NoGravity
  +SPAWNCEILING
  States
  {
  Spawn:
    STRB A 0 Bright
    STRB A 0 Bright A_SpawnItem ("StrobeEmitterBlue")
