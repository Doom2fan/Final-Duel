//Light RAYS

Actor StrobeRayBlue
{
  Radius 2
  Height 2
  Speed 100
  Damage 0
  Renderstyle None
  projectile
  -ACTIVATEIMPACT
  -ACTIVATEPCROSS
  +RIPPER
  +BLOODLESSIMPACT
  +PAINLESS
  +ThruActors
  States
  {
  Spawn:
    BAL1 A 8
    Loop
  Death:
    BAL1 C 2
    Stop
  }
}

